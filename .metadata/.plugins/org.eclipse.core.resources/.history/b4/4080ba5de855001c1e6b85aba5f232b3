package com.javacourse.intro;

public class GcdAndLcm {

	private int number1;
	private int number2;

	public GcdAndLcm() {
		super();
	}

	public GcdAndLcm(int number1, int number2) {
		super();
		this.number1 = number1;
		this.number2 = number2;
	}

	public int gcd(int a, int b) {
		do {
			if (a > b) {
				a -= b;
			} else {
				b -= a;
			}
		} while (a != b);

		return a;
	}

	public int lcm(int a, int b) {
		return (a * b) / gcd(a, b);
	}
}
